<%= form_for @admin, url:admin_signin_path, html:{id:"session-form", class:"session-form"} do |f| %>

  <h1><%= @greeting %></h1>

  <div class="session-spinner" id="session-spinner" style="display:none"></div>

  <% if flash[:error] || flash[:success] %>
    <p class="session-form-feedback" id="session-form-feedback">
      <%= flash[:error] %> <%= flash[:success] %>
    </p>
  <% else %>
    <p class="session-form-feedback" id="session-form-feedback" style="display:none"></p>
  <% end %>

  <%= f.label :email, "Email address", for:"session-form-email" %>
  <%= f.email_field :email, {
    id: "session-form-email",
    placeholder: "Enter your email address",
    autocorrect: "off",
    autocapitalize: "none",
    required: "true",
    tabindex: 1,
    value: @email,
  } %>

  <%= f.label :passcode, "Passcode", for:"session-form-passcode" %>
  <%= f.number_field :passcode, {
    id: "session-form-passcode",
    placeholder: "Passcode",
    autocorrect: "off",
    autocomplete: "off",
    pattern: "[0-9]*",
    required: "true",
    tabindex: 2,
    style: "display:none"
  } %>

  <%= f.button "Request a passcode", id:"session-form-request", class:"session-button" %>
  <%= f.button "Sign In", id:"session-form-submit", class:"session-button", style:"display:none" %>

  <p class="session-form-resend" id="session-form-resend" style="display:none">
    <button>Request another code</button>
  </p>

<% end %>
