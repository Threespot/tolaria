<% if @resource.persisted? %>
  <%= content_for :title, "Edit #{Tolaria.display_name(@resource)}" %>
<% else %>
  <%= content_for :title, "New #{@resource.model_name.human.titleize}" %>
<% end %>

<%= form_for [:admin, @resource], html:{class:"resource-form"} do |form_builder| %>

  <div class="main-controls">
    <div class="left">
      <h1>
        <span class="crumb"><%= @resource.model_name.human.pluralize.titleize %></span>
        <%= content_for :title %>
      </h1>
    </div>
    <div class="right">
      <%= render "admin/tolaria_resource/form_buttons" %>
    </div>
  </div>

  <%= render partial:"admin/#{@resource.model_name.route_key}/form", locals:{f:form_builder} %>

  <div class="main-controls -inverse">
    <div class="right">
      <%= render "admin/tolaria_resource/form_buttons" %>
    </div>
  </div>

<% end %>
