<%= content_for :title, Tolaria.display_name(@resource) %>

<div class="main-controls">

  <div class="main-controls-left">
    <h1>
      <span class="crumb">
        <%= fontawesome_icon @managed_class.icon %>
        <%= @managed_class.model_name.human.pluralize.titleize %>
      </span>
      <%= content_for :title %>
    </h1>
  </div>

  <div class="main-controls-right">
    <%= render "admin/tolaria_resource/show_buttons" %>
  </div>

</div>

<% if admin_template_exists?("#{@managed_class.model_name.route_key}/show") %>

  <%= render partial:"admin/#{@managed_class.model_name.route_key}/show" %>

<% else %>

  <% # Render a default table because the developer didnâ€™t provide one %>

  <table class="show-table">
    <thead>
      <%= show_thead_tr %>
    </thead>
    <tbody>
      <%= show_tr "Created At", @resource.created_at.presence.try(:strftime, "%Y-%m-%d %I:%M %p"), class:"monospace" %>
      <%= show_tr "Updated At", @resource.updated_at.presence.try(:strftime, "%Y-%m-%d %I:%M %p"), class:"monospace" %>
      <%= show_tr "Label", Tolaria.display_name(@resource) %>
    </tbody>
  </table>

<% end %>

<div class="main-controls -inverse">

  <div class="main-controls-right">
    <%= render "admin/tolaria_resource/show_buttons" %>
  </div>

</div>
